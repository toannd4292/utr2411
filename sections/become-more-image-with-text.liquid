<div class="pb-lg-5 pt-lg-5 pt-sm-5 pb-sm-0 text-sm-center text-md-center">
  <div class="page-width position-relative">
     <div class="grid grid--1-col product-grid grid--1-col-tablet grid--2-col-desktop">
       <div class="grid__item mb-1">
        <div class="text-uppercase text-black text-sm-center text-center font-lg-16 font-sm-12 fw-bold">{{section.settings.tag-line}}</div>
        <h2 class="section-medium-title section-title-sm mb-0 mt-0 lh-xl-78 text-center d-inline-lg-block"><span class="text-uppercase lh-xl-78">{{section.settings.heading}}</span>
        <span class="lh-normal font-best-friend text-teal d-block mt-0 font-sm-55 ps-lg-2 lh-xl-78 mt-nt-lg-1 pt-sm-0-5">{{section.settings.sub-heading}}</span></h2> 
       </div>
     </div>   
  </div> 
  {% comment %}
