  {% endcomment %}
    <div class="blue-teal-gradient-bg border-radius-sm-3 text-sm-center mt-sm-p-40 min-h-lg-310 custom-banner--{{ section.settings.image_height }}">
    <div class="page-width pb-lg-3 pt-lg-3 pt-sm-5 pb-sm-2 text-black">
    <div class="grid grid--1-col product-grid grid--2-col-tablet grid--2-col-desktop position-relative justify-content-sm-center justify-content-md-center">
        <div class="become-img-right-position">
          <div class="">
            <img class="max-img-fluid border-radius-sm-3 mt-nt-md-10" src="{{section.settings.section-image | image_url}}" />
          </div>  
        </div> 
        <div class="grid__item">
          <p class="findtext fw-bold font-sm-14 col-md-100 pb-3 text-lg-justify">{{ section.settings.paragrap-title }}</p>
          <a href="{{section.settings.section-button-url-first}}" class="btn-black btn-outline-lg-black justify-content-center text-uppercase font-sm-12 font-md-16 font-lg-18">{{section.settings.section-button-first}}</a>
          <a href="{{section.settings.section-button-url-second}}" class="btn-second btn-black btn-outline-lg-black justify-content-center text-uppercase font-sm-12 font-md-16 font-lg-18">{{section.settings.section-button-second}}</a>
         </div>
    </div>
    </div>
    </div>
    </div> 

