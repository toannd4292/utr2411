{% schema %}
  {
    "name": "Ut Gradient BgColor Image",
    "presets": [
      {
        "name": "Ut Gradient BgColor Image Text",
        "category": "Ut Gradient BgColor Image Text"
      }
    ],
   "settings": [
       {
			"type":"text",
			"id":"tag-line",
			"label": "Tag Line"
	   },
       {
			"type":"text",
			"id":"heading",
			"label": "Heading Title"
		},
        {
         "type": "text",
         "id": "sub-heading",
         "label": "Subtitle"
        },
        {
         "type": "text",
         "id": "paragrap-title",
         "label": "Paragrap Title"
        },
        {
 	 		"type": "image_picker",
 			"id": "section-image",
 			"label": "Section Image"
 		},
       {
          "type": "select",
          "id": "image_height",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ],
          "default": "medium",
          "label": "Banner height",
        },
        {
 			"type": "text",
 			"id": "section-button-first",
 			"label": "First Button Title"
 		},
		{
			"type": "url",
 			"id": "section-button-url-first",
 			"label": "Button Link"
		},
        {
 			"type": "text",
 			"id": "section-button-second",
 			"label": "Second Button Title "
 		},
		{
			"type": "url",
 			"id": "section-button-url-second",
 			"label": "Button Link"
		}
    ]
  }
{% endschema %}

