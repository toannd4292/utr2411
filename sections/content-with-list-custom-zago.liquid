{% schema %}
  {
  "name": "Content List Zago",
  "presets": [
    {
      "name": "Content List Zago",
      "category": "Content List Zago"
    }
  ],
  "settings": [
    {
      "type": "image_picker",
      "id": "section-image",
      "label": "Section Image"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "heading_and_list",
      "name": "Content Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading Title"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading Size",
          "options": [
            { "value": "h1", "label": "Large" },
            { "value": "h2", "label": "Medium" },
            { "value": "h3", "label": "Small" }
          ],
          "default": "h2"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "SubTitle"
        },
        {
          "type": "select",
          "id": "subheading_size",
          "label": "Sub Header Size",
          "options": [
            { "value": "h2", "label": "Medium" },
            { "value": "h3", "label": "Small" }
          ],
          "default": "h2"
        },
        {
			"type":"text",
			"id":"list",
			"label": "List"
		},
        {
			"type":"text",
			"id":"list2",
			"label": "List"
		},
        {
			"type":"text",
			"id":"list3",
			"label": "List"
		},
        {
			"type":"text",
			"id":"list4",
			"label": "List"
		},
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button Link"
        }
      ]
    }
  ]
}

{% endschema %}

