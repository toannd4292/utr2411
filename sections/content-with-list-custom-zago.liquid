@media (max-width: 450px) {
  .px-lg-2-2 {
    padding-bottom: 2.5rem;
  }
  .pb-sm-5 {
    padding-bottom: unset;
  }
  .custom-justify-content {
    li {
      text-align: center;
    }
  }
}
</style>

<div id="Eligibility" class="pt-lg-5 pt-sm-5">
  <div class="page-width pb-lg-5 pb-sm-5">
    <div class="grid grid--1-col grid--1-col-tablet grid--2-col-deskto d-flex align-items-stretch"> 
      <div class="grid__item custom-grid_item">
        <div>
          <img id="custom-img-height" class="img-fluid border-radius-lg-3 border-radius-sm-3"
               data-src="{{section.settings.section-image | img_url: 'master' }}"
            src="{{section.settings.section-image | img_url: 'master' }}"
               loading="lazy">
        </div>
      </div>

      <div id="height-grid__item" class="grid__item" style="width: 240px;">
        {% for block in section.blocks %}
          <div class="px-lg-2-2">
            <!-- Heading -->
            {% case block.settings.heading_size %}
              {% when 'h1' %}
                <h1 class="text-uppercase section-medium-title mt-0 mb-0 mt-sm-1 lh-xl-90 text-sm-center section-title-large">
                  {{ block.settings.heading }}
                </h1>
              {% when 'h2' %}
                <h2 class="text-uppercase section-medium-title mt-0 mb-0 mt-sm-1 lh-xl-90 text-sm-center section-title-medium">
                  {{ block.settings.heading }}
                </h2>
              {% when 'h3' %}
                <h3 class="text-uppercase section-medium-title mt-0 mb-0 mt-sm-1 lh-xl-90 text-sm-center section-title-small">
                  {{ block.settings.heading }}
                </h3>
            {% endcase %}

            {% case block.settings.subheading_size %}
              {% when 'h2' %}
                <h2 class="section-sub-title text-teal mt-0 mb-0 lh-xl-78 ps-lg-2 text-sm-center section-sub-title-medium">
                  {{ block.settings.subheading }}
                </h2>
              {% when 'h3' %}
                <h3 class="section-sub-title text-teal mt-0 mb-0 lh-xl-78 ps-lg-2 text-sm-center section-sub-title-small">
                  {{ block.settings.subheading }}
                </h3>
            {% endcase %}

            <ul class="fw-bold font-sm-13 font-lg-18 font-md-14 custom-padding-left custom-justify-content">
              {%- if block.settings.list != blank -%}
                <li>{{block.settings.list}}</li>
              {%- endif -%}
              {%- if block.settings.list2 != blank -%}
                <li>{{block.settings.list2}}</li>
              {%- endif -%}
              {%- if block.settings.list3 != blank -%}
                <li>{{block.settings.list3}}</li>
              {%- endif -%}
              {%- if block.settings.list4 != blank -%}
                <li>{{block.settings.list4}}</li>
              {%- endif -%}
            </ul>

            <div class="d-flex justify-content-sm-center">
              <a href="{{ block.settings.button_url }}" class="btn-black btn-sm fst-sm-14 text-uppercase ">
                {{ block.settings.button_text }}
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>


