<div id="section-{{ section.id }}" class="out-box gradient-header-custom">
  <div class="shape-box ">
    <div class="image-box blue-teal-gradient-bg">
      <div class="page-width text-center pt-lg-25">
                            {% case section.settings['heading-size'] %}
      {% when 'h1' %}
        <h1 class="text-uppercase section-medium-title mt-0 mb-0 lh-xl-78 section-title-large text-center">
          {{ section.settings.heading }}
        </h1>
      {% when 'h2' %}
        <h2 class="text-uppercase section-medium-title mt-4 mb-0 lh-xl-78 section-title-medium text-center">
          {{ section.settings.heading }}
        </h2>
      {% when 'h3' %}
        <h3 class="text-uppercase section-medium-title mt-4 mb-0 lh-xl-78 section-title-small text-center">
          {{ section.settings.heading }}
        </h3>
    {% endcase %}
     {% case section.settings['sub-heading-size'] %}
     {% when 'h2' %}
        <h2 class="lh-normal section-sub-title font-best-friend text-black  mt-0 mb-0 section-sub-title-medium">
          {{ section.settings.sub-heading }}
        </h2>
        {% when 'h3' %}
        <h3 class="lh-normal section-sub-title font-best-friend text-black  mt-0 mb-0 section-sub-title-small">
          {{ section.settings.sub-heading }}
        </h3>
  {% endcase %}
      </div>
    </div>
  </div>
</div>
<style>
    .gradient-header-custom  .section-medium-title.section-title-large {
    color: var(--color-black);
    font-family: var(--font-Tungsten);
    font-size: 40px!important;
    line-height: 45px;
}
    .gradient-header-custom  .section-medium-title.section-title-medium {
    font-size: 36px;
    line-height: 36px;
        margin: 0 !important;
}

.gradient-header-custom  .section-medium-title.section-title-small {
    font-size: 32px;
    color: var(--color-black);
    font-family: var(--font-Tungsten);
        margin: 0 !important;
}
  
.section-sub-title.section-sub-title-small {
    font-size: 55px;
}
  @media screen and (min-width: 990px){
    #section-{{ section.id }} .page-width{
      max-width:1200px;
      margin:0 auto;
    }
  }
  
  @media screen and (max-width: 749px){
    #section-{{ section.id }} .page-width{
      max-width: calc(100% - 100px);
      padding-left: 1.5rem;
      padding-right: 1.5rem;
      padding-bottom: 0rem;
    }
    
    .gradient-header-custom  .section-medium-title.section-title-large {
    font-size: 36px;
    color: var(--color-black);
    font-family: var(--font-Tungsten);
}

.gradient-header-custom  .section-medium-title.section-title-small {
    font-size: 30px;
    color: var(--color-black);
    font-family: var(--font-Tungsten);
}

.gradient-header-custom  .section-medium-title.section-title-medium {
    font-size: 34px;
}
    
    .section-sub-title.section-sub-title-small {
    font-size: 35px;
}
  }
</style>
{% schema %}
  {
    "name": "Gradient Heading Text",
     "presets": [
      {
        "name": "Gradient Heading Text",
        "category": "Gradient Heading Text"
      }
    ],
    "settings": [
      {
  			"type":"text",
  			"id":"heading",
  			"label": "Heading Title"
  		},
       {
    "type": "select",
    "id": "heading-size",
    "label": "Heading Size",
    "options": [
      {
        "value": "h1",
        "label": "Large"
      },
      {
        "value": "h2",
        "label": "Medium"
      },
      {
        "value": "h3",
        "label": "Small"
      }
    ],
    "default": "h2"
  },
      {
       "type": "text",
       "id": "sub-heading",
       "label": "Sub Title"
      },
                   {
          "type": "select",
          "id": "sub-heading-size",
          "label": "Sub Header Size",
          "options": [

              { "value": "h2", "label": "Medium" },
              { "value": "h3", "label": "Small" }
          ],
               "default": "h2"
      }
    ]
  }
{% endschema %}

