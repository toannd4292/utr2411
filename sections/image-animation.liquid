{% render 'partial-style', section: section %}
{%- style -%}
 @keyframes translateinfinite {
  0%   { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

  .section-{{ section.id }}-padding .logo-list-wrapper {
    gap: 15px;
    width: calc(380px* 24);
    transform-origin: 50% 50%;
      animation: translateinfinite {{section.settings.change_slides_speed}}s infinite normal linear;
  }
  .section-{{ section.id }}-padding .text-animation-inner {
    font-size: 32px;
    line-height: 33.6px;
    letter-spacing: 0px;
    gap: 30px;
    display: flex;
    align-items: center;
    margin: 0 auto;
    margin-right: 40px;
  }
  .section-{{ section.id }}-padding .logo-list img {
      max-width: 192px;
  }
  @media screen and (max-width: 989px) {
    .section-{{ section.id }}-padding .text-animation-inner {
        font-size: 25px;
        line-height: 25.2px;
    }
  }
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding .logo-list-wrapper {
      gap: 5px;
    }
    .section-{{ section.id }}-padding .text-animation-inner {
        gap: 20px;
        margin-right: 20px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient overflow-hidden">
  <div class="page-width-full w-100 section-{{ section.id }}-padding">
    <div class="logo-list-wrapper flex inline-box gap-5rem">
      {% for i in (1..12) %}
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'item' -%}
              <div class="logo-list  items-center  flex items-center justify-center">
                {% if block.settings.image %}
                  <div class="text-animation-inner w-full">
                    <img
                      src="{{ block.settings.image | img_url: 'master' }}"
                      class="w-full"
                      style="max-width: {{ block.settings.width }}px;"
                    >
                  </div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image animation",
  "tag": "section",
  "class": "section text-animation",
  "settings": [
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 200,
      "max": 600,
      "step": 5,
      "unit": "s",
      "label": "Speed",
      "default": 320
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "paragraph", "content": "=========== Desktop ==========="
    },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 1, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 1, "unit": "px", "label": "Padding bottom", "default": 36 },
    {
      "type": "paragraph", "content": "=========== Tablet ==========="
    },
    { "type": "range", "id": "pt_md", "min": 0, "max": 100, "step": 1, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "pb_md", "min": 0, "max": 100, "step": 1, "unit": "px", "label": "Padding bottom", "default": 36 },
    {
      "type": "paragraph", "content": "=========== Mobile ==========="
    },
    { "type": "range", "id": "pt_xs", "min": 0, "max": 100, "step": 1, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "pb_xs", "min": 0, "max": 100, "step": 1, "unit": "px", "label": "Padding bottom", "default": 36 }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "width",
          "label": "Width image",
          "default": "120"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image animation"
    }
  ]
}
{% endschema %}
