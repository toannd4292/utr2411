{% endstylesheet %}
<div class="wrap-testi">
{% if section.settings.heading != blank or section.settings['sub-heading'] != blank %}
  <div class="page-width text-center pt-lg-5 pt-sm-2 pb-sm-2">
       <h2 class="text-uppercase section-title section-title-sm  mb-0 lh-xl-78">
      {{ section.settings.heading }}
    </h2>
    <h2 class="special-h2 lh-xl-90 lh-sm-normal font-lg-85 font-sm-55 mt-sm-n1 text-white font-best-friend text-main-teal d-block mt-0 mb-2">
      {{ section.settings['sub-heading'] }}
    </h2>
  </div>
{% endif %}
<div class="section-{{ section.id }} position-relative text-center page-width text-ctn">
  <div class="customers-testimonials-new-slide slider slider-for">
    {% for block in section.blocks %}
      
      {%- if block.settings.image == blank -%}
        
        <div class="testimonial_bg text-center">
          <div class="flex warpar">
          <div class="blue-teal-gradient-bg-new border-radius-lg-3 border-radius-sm-3 testimonial-content">
            <div class="testmonial-wrapper">
              <div class="comma">
                <img src="https://cdn.shopify.com/s/files/1/0690/8071/1488/files/comma.svg?v=1670574287">
              </div>
              <div class="testmonial-para">{{ block.settings.description }}</div>
            </div>
          </div>
          <div class="author mt-3 lh-xl-78">{{ block.settings.author }}</div>
          <div class="author-loaction">{{ block.settings['author-designation'] }}</div>
          </div>
        </div>
        
      {%- elsif block.settings.image != blank -%}
        
        <div class="testimonial_bg text-center">
            <div class="flex warpar">
          <div class="blue-teal-gradient-bg-new border-radius-lg-3 border-radius-sm-3 testimonial-content">
            <div class="testmonial-wrapper">
              <div class="background-tes">
                <div class="quote-icon"><img src="https://cdn.shopify.com/s/files/1/0690/8071/1488/files/Compound_Path.png?v=1741060689"></div>
                <div class="testimonial-pick">
                  <img src="{{block.settings.image | image_url}}" width="100" height="100" alt="Testimonial-image">
                </div>
              </div>
              <div class="testmonial-para-inner">
                <div class="testmonial-para testmonial-para-{{ forloop.index }}" data-id="{{ forloop.index }}"><div class="inner-wrap">{{ block.settings.description }}</div></div>
              </div>
            </div>
          </div>
          <div class="author mt-3 lh-xl-78">{{ block.settings.author }}</div>
          <div class="author-loaction">{{ block.settings['author-designation'] }}</div>
            </div>
        </div>
        
      {%- endif -%}
      
    {% endfor %}
  </div>
</div>
</div>
<script>
$(".section-{{ section.id }} .slider-for")
  .slick({
     vertical: false,
     autoplay:false,
     autoplaySpeed:3000,    
     slidesToShow: 3,
     slidesToScroll: 1,
     arrows: true,
     dots: false,
     fade: false,
     pauseOnHover:true,
     prevArrow: '<button class="slick-prev slick-arrow" aria-label="Previous" type="button" style=""><img src="https://cdn.shopify.com/s/files/1/0690/8071/1488/files/icon-arrow.png?v=1737538372"></button>',
     nextArrow: '<button class="slick-next slick-arrow" aria-label="Next" type="button" style=""><img src="https://cdn.shopify.com/s/files/1/0690/8071/1488/files/icon-arrow.png?v=1737538372"></button>',
      responsive: [
        {
          breakpoint: 989,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 749,
          settings: {
            vertical: true,
            slidesToShow: 2,
            slidesToScroll: 1
          }
        }
      ]
  })
  .on("setPosition", function () {
      resizeSlider();  
  });

  function resizeSlider() {
    let maxHeight = 0;
    $(".section-{{ section.id }} .slick-track .testimonial_bg").each(function(){
      let height = $(this).find('.testmonial-para-inner').height();
      if (height > maxHeight) {
          maxHeight = height;
      }      
    });
    $(".section-{{ section.id }} .slick-track .testimonial_bg .testmonial-para-inner").css("min-height", maxHeight);
    $(".section-{{ section.id }} .slick-track .testimonial_bg .testmonial-para-inner .testmonial-para").css("min-height", maxHeight);
  };  
</script>
