<div class="page-width pb-lg-2 pt-lg-5 pt-sm-0 pb-sm-0">
  <div class="grid grid--1-col grid--1-col-tablet grid--2-col-desktop">
    {% for block in section.blocks %}
    <div class="grid__item mb-1">
      <div class="key-box border-radius-lg-3 border-radius-sm-3">
         <div class="position-relative">
           
        	<div class="media--landscape media--square-sm-2 position-relative border-radius-lg-3 border-radius-sm-3" style="background:url('{{block.settings.block-image |  img_url:'large'}}') no-repeat top center; background-size: cover;"> 
              <div class="card-img-overlay card-overlay-sm border-radius-lg-3 border-radius-sm-3"></div>
             </div>  
              <div class="key-position-b key-position-c d-flex flex-column justify-content-lg-center justify-content-sm-end align-items-center h-100">
                <div class="p-lg-3 p-sm-1 z-index-2">
                  <div class="center-position-text centerblock d-sm-inline-block">
                    <h2 class="text-uppercase section-title section-title-sm mb-0 mt-0 lh-xl-78 text-sm-center">{{block.settings.heading}}</h2>
                    <h2 class="section-sub-title text-black mt-0 mb-0 lh-xl-78 ps-lg-2">{{block.settings.sub-heading}}</h2>
                    <div class="d-block d-sm-none d-md-none hoverhidebtn">
                      <a href="#" class="btn-white-outline d-inline-block min-w-lg-225 min-w-sm-130 text-uppercase mt-3">Learn more</a>
                    </div>   
                   </div>
                    <div class="fw-bold lh-sm-normal mb-0 pb-sm-2 px-lg-1 font-md-12">
                      {{block.settings.block-list-items}}
                    </div>
                </div> 
              </div>
            
          </div>
        </div>
    </div>
     {% endfor %}
  </div>
</div>  

{% schema %}
  {
    "name": "Two column image hover",
    "presets": [
      {
        "name": "Two column image hover",
        "category": "Two column image hover"
      }
    ],
    "settings": [],
    "blocks":[
	  {
		"type":"home-card",
		"name":"image-block",
		"settings":[
		 {
		  "type": "image_picker",
       	  "id": "block-image",
       	  "label": "Card Image"
		 },
         {
			"type":"text",
			"id":"heading",
			"label": "Heading Title"
		},
		{
         "type": "text",
         "id": "sub-heading",
         "label": "Sub Title"
        },
		{
         	 "type": "richtext",
         	 "id": "block-list-items",
         	 "label": "Bulet Points" 
		}
		]
	  }
    ]
  }
{% endschema %}

