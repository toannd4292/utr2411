<script>
    let markerLocations = [];
    let eventLocations = [];
    let map;

    function setMarkers() {
        var infoWindow;
        for (var i = 0; i < eventLocations.length; i++) {
            var event = eventLocations[i];
            var myLatLng = new google.maps.LatLng(event[0], event[1]);
            const pinIcon = "https://cdn.shopify.com/s/files/1/0690/8071/1488/files/location-vector.svg?v=1679692179";
            infoWindow = new google.maps.InfoWindow();

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                icon: pinIcon,

                title: event[2],
                zIndex: event[3],
                optimized: true
            });

            google.maps.event.addListener(marker, 'click', (function(marker, i) {
                return function() {
                    const event = eventLocations[i];
                    if (event && event.length >= 5) {
                        var contentString = '<div><a href="https://app.utrsports.net/clubs/' + event[4] + '" target="_blank">' + marker.getTitle() + '</a></div>';
                        infoWindow.close();
                        infoWindow.setContent(contentString);
                        infoWindow.open(map, marker);
                    }
                }
            })(marker, i));

            markerLocations.push(marker);
        }
    }

    function reloadMarkers() {
        for (var i = 0; i < markerLocations.length; i++) {
            markerLocations[i].setMap(null);
        }
        markerLocations = [];
        setMarkers();
    }

    function normalizeLng(lng) {
        return ((lng + 180) % 360 + 360) % 360 - 180;
    }
    window.__initialFetchDone = false;
    {% assign distData = section.settings.distance %}
    window.initializeMap = function () {
        const fallbackCenter = { lat: 34.84555, lng: -101.299591 };
        const fallbackURL = "https://api.utrsports.net/v2/search/clubs/13?top=500&skip=0";
        let usingFallback = false;

        function setupMap(center, zoomLevel, initialFetchURL = null) {
            map = new google.maps.Map(document.getElementById("map"), {
                center: center,
                zoom: zoomLevel,
                gestureHandling: "greedy",
            });

            let mapInteractionTimeout;
            let lastCenter;
            let lastZoom;

            map.addListener("idle", function () {
                const currentCenter = map.getCenter();
                const currentZoom = map.getZoom();

                if (
                    lastCenter &&
                    lastZoom === currentZoom &&
                    google.maps.geometry.spherical.computeDistanceBetween(currentCenter, lastCenter) < 200
                ) {
                    return;
                }

                lastCenter = currentCenter;
                lastZoom = currentZoom;

                clearTimeout(mapInteractionTimeout);
                mapInteractionTimeout = setTimeout(() => {
                    const bounds = map.getBounds();
                    const center = map.getCenter();
                    const ne = bounds.getNorthEast();

                    const radiusInMiles =
                        google.maps.geometry.spherical.computeDistanceBetween(center, ne) * 0.000621371;
                    const lat = center.lat();
                    const lng = normalizeLng(center.lng());

                    if (!window.__initialFetchDone) {
                        window.__initialFetchDone = true;

                        if (usingFallback) {
                            fetchClubs(fallbackURL);
                        } else {
                            fetchClubs(`https://api.utrsports.net/v2/search/clubs/13?distance=200mi&pin=${lat},${lng}`);
                        }
                    } else {
                        let dist;
                        if (userHasSearched) {
                            // User đã nhập distance → lấy từ input
                            dist = document.getElementById('distance_input')?.value || "100";
                        } else {
                            // Chưa search → luôn dùng 200
                            dist = {{  distData }};
                            console.log("dhsuaihisudisicjdsoi",dist);
                        }

                        fetchClubs(`https://api.utrsports.net/v2/search/clubs/13?distance=${dist}mi&pin=${lat},${lng}`);
                    }

                }, 700);
            });

            if (initialFetchURL) {
                fetchClubs(initialFetchURL);
            }
        }

        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(
                (position) => {
                    const userLat = position.coords.latitude;
                    const userLng = position.coords.longitude;
                    const userLocation = { lat: userLat, lng: userLng };

                    console.log("User location:", userLocation);

                    setupMap(
                        userLocation,
                        6,
                        `https://api.utrsports.net/v2/search/clubs/13?distance=200mi&pin=${userLat},${userLng}`
                    );
                },
                (error) => {
                    console.warn("User denied location or error:", error);
                    usingFallback = true;
                    setupMap(fallbackCenter, 4, fallbackURL);
                }
            );
        } else {
            console.warn("Geolocation not supported. Using fallback.");
            usingFallback = true;
            setupMap(fallbackCenter, 4, fallbackURL);
        }
    };


    var clubData = {
        clubIds: []
    };

    var searchText = "";
    var distanceText = document.getElementById('distance_input')?.value || "100";
    var userHasSearched = false;

    let searchBtn = document.querySelector('.club-search-btn');
    searchBtn.onclick = () => {
        searchText = document.getElementById('search_input').value;
        distanceText = document.getElementById('distance_input').value || "100";
        userHasSearched = true;
        fetchDataFromGoogleMapAPI(searchText);
    }

    $('#search_input').keypress(function (e) {
        if (e.which == 13) {
            e.preventDefault();
            searchText = document.getElementById('search_input').value;
            distanceText = document.getElementById('distance_input').value || "100";
            userHasSearched = true;
            fetchDataFromGoogleMapAPI(searchText);
        }
    });

    let currentAbortController;

    function fetchClubs(fetchURL) {
        eventLocations = [];
        clubData.clubIds = [];

        if (currentAbortController) {
            currentAbortController.abort();
        }
        currentAbortController = new AbortController();

        const requestOptions = {
            method: 'GET',
            signal: currentAbortController.signal,
            redirect: 'follow'
        };

        fetch(fetchURL, requestOptions)
            .then(response => response.json())
            .then((result) => {
                let data = "";

                const center = map.getCenter();

                let tennisClubs = result.hits
                    .filter(values => {
                        return values.source.name && !values.source.name.includes('Pickleball');
                    })
                    .map(values => {
                        const source = values.source;
                        const clubName = source.name;
                        const id = source.id;
                        const member = source.memberCount;

                        if (source.location && source.location.latLng) {
                            const [llat, llng] = source.location.latLng;
                            const eventLatLng = new google.maps.LatLng(llat, llng);
                            const distanceInMiles = google.maps.geometry.spherical.computeDistanceBetween(center, eventLatLng) * 0.000621371;

                            return {
                                clubName,
                                id,
                                member,
                                lat: llat,
                                lng: llng,
                                distanceInMiles
                            };
                        } else {
                            return null;
                        }
                    })
                    .filter(x => x !== null);

                tennisClubs.sort((a, b) => a.distanceInMiles - b.distanceInMiles);

                console.log("== Club List by Distance ==");
                tennisClubs.forEach((clubObj, index) => {
                    console.log(`${index + 1}. ${clubObj.clubName} - ${clubObj.distanceInMiles.toFixed(1)} mi`);
                });

                tennisClubs.forEach((clubObj, index) => {
                    clubData.clubIds.push(clubObj.id);
                    eventLocations.push([clubObj.lat, clubObj.lng, clubObj.clubName, index, clubObj.id]);

                    data += generateClubHTML(clubObj.clubName, clubObj.id, clubObj.member);
                });

                const element_flex = document.getElementById("flex");
                if (element_flex) {
                    element_flex.innerHTML = data;
                    if (data) fetchEventsData();
                }

                reloadMarkers();
            })
            .catch(error => {
                if (error.name === "AbortError") {
                    console.log("Request aborted.");
                    return;
                }
                console.log('Fetch error:', error);
            });
    }

