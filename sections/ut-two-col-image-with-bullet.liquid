<div class="page-width pb-lg-5 pb-sm-5 text-sm-center">
  <div class="grid grid--1-col grid--1-col-tablet grid--2-col-desktop justify-content-center align-items-center text-sm-center">
    <div class="grid__item">
      <div>
        <img class="img-fluid border-radius-lg-3 border-radius-sm-3" src="{{section.settings.section-image | image_url}}" />
      </div>
    </div>
    <div class="grid__item">
      <div class="w-lg-92">
         <p class="text-uppercase mb-lg-1 mb-sm-1 mt-0 gotham-medium font-sm-12 text-black font-lg-16 font-sm-12 lh-normal new-adj ">
           {{section.settings.description }}
          </p>
          <h2 class="section-medium-title font-tungsten-medium section-title-sm mb-0 lh-xl-78 text-center d-inline-lg-block mt-0 new-adj"><span class="text-uppercase">{{section.settings.heading}}</span><br />
         <span class="lh-xl-78 lh-sm-normal font-best-friend section-sub-title text-teal d-block mt-nt-lg-1 mt-sm-n1 ">{{section.settings.subheading}}</span></h2>
         <ul class="fw-bold ullist dot-cs font-sm-13 font-lg-18 font-md-14 {% if section.settings.list_alignment == 'left' %}
           align-left
         {% else %}
           align-center
         {% endif %}">
            {% for block in section.blocks %}
              <li>{{block.settings.block-list-items | strip | strip_newlines }}</li>
            {% endfor %}
          </ul>
         <a href="{{section.settings.section-button-url}}" class="btn-black min-w-lg-290 min-w-sm-160 font-sm-12 font-md-14 text-uppercase mt-3">{{section.settings.section-button}}</a>
      </div>  
    </div>
  </div>
</div>
<style>
.new-adj {
  text-align: center!important;
      width: 100%;
}

.dot-cs p {
  margin: 0;
  line-height: calc(1 + 0.8 / var(--font-body-scale));
}

ul.fw-bold.ullist.dot-cs {
  text-align: center;
}

ul.fw-bold.ullist.dot-cs.align-left {
  text-align: left;
}

ul.fw-bold.ullist.dot-cs.align-center {
  text-align: center;
}

@media (max-width: 749px) {
  ul.fw-bold.ullist.dot-cs,
  ul.fw-bold.ullist.dot-cs.align-center {
    padding-left: 15px;
    display: flex;
    flex-direction: column;
    text-align: center;
  }

  ul.fw-bold.ullist.dot-cs.align-left {
    padding-left: 15px;
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .dot-cs p {
    margin: 0;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
  }
}

 
</style>
