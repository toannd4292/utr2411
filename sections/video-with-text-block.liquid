{{ 'image-with-text-new.css' | asset_url | stylesheet_tag }}
{% render 'partial-style', section: section %}
<div {% if section.settings.id != blank %} id="{{ section.settings.id }}" {% endif %} class="section-{{ section.id }} section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }} {{ section.settings.class }} {% if section.settings.image_below %} image_below-text {% endif %} {% if custom_width %} antr--custom-width {% endif %} {% if section.settings.container %} antr--container-content {% endif %}">

<div class="page-width image-text-new-inner trans-video">
  
  <div class="full-video-highlight-img-section-wrapper border-radius-lg-3 border-radius-sm-3 d-flex align-items-center justify-content-end flex-column" style="background:url('{{ section.settings.section-image-first | image_url }}') no-repeat; background-size:cover; background-position:center;">
    <div class="d-flex justify-content-center align-items-center h-100 video-v3">
      <a href="{{ section.settings.section-button-url }}" class="video-btn__new popup-youtube text-center text-uppercase gap-2 font-tungsten-medium position-relative">
        <img src="https://cdn.shopify.com/s/files/1/0690/8071/1488/files/Frame_2147222754.png?v=1755150582" alt="Play" loading="lazy">
      </a>
      <h3 class="size-36 button-video-v small-hide">{{ section.settings.section-video-button }}</h3>
    </div>
  </div>
  </div>
<div class="page-width">
  <div class="image-with-text__grid grid grid--gapless custom--width-content flex-wrap justify-between img-video-v2">
      <div class="image-with-text__text-item grid__item w-full w-40 w-md-49 w-xs-100">

      {% if section.settings.heading != blank %}
        <h2 class="ltbh-heading text--custom mg--0 text_custom_r9aYPW inter-semibold mt--0 mb--0 size-64 line-64 size-md-36 line-md-40">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      
    </div>

    <div class="w-full image-with-text__media-item image-with-text__media-item--medium image-with-text__media-item--top grid__item w-full w-58 w-md-50 w-xs-100">

      {% if section.settings.text != blank %}
        <div class="ltbh-text">{{ section.settings.text }}</div>
      {% endif %}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <div class="banner__buttons">
          <div class="antr--button">
            <a href="{{ section.settings.button_link }}" class="btn-black">{{ section.settings.button_label }}</a>
          </div>
        </div>
      {% endif %}

    </div>

  
  </div>


</div>

</div>
<style>
.trans-video,
.trans-video .full-video-highlight-img-section-wrapper {
  transition: max-width 2.5s ease, border-radius 2.5s ease, padding 2.5s ease;
}

.image-with-text__grid.grid.grid--gapless.custom--width-content.flex-wrap.justify-between.img-video-v2 {
    max-width: 1628px;
    margin-left: auto !important;
    margin-right: auto !important;
    {% comment %} padding: 0 2.6rem !important; {% endcomment %}
}
.video-v3{flex-direction:column}
.img-video-v2{margin:60px 0!important}
.button-video-v{color:#fff}
.ltbh-heading{max-width:380px;letter-spacing:-.03em}

.pse-2{padding-left:2rem;padding-right:2rem}
.full-video-highlight-img-section-wrapper{
  height:842px;width:100%;max-width:1632px;margin:0 auto
}
  @media(min-width:1200px){
  .video-v3 {
    flex-direction: column;
    position: relative;
    top: 3.6em;
    left: -30px;}
.button-video-v {
    color: #fff;
    line-height: 1;
