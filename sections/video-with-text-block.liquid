  .full-video-highlight-img-section-wrapper{height:400px}
}
@media screen and (min-width:992px) and (max-width:1199px){
  .full-video-highlight-img-section-wrapper{height:580px}
}
</style>
{%- style -%}
  .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }

  @media screen and (max-width: 989px) {
    .section-{{ section.id }}-padding { padding-top: {{ section.settings.pt_md }}px; padding-bottom: {{ section.settings.pb_md }}px; }
  }
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding { padding-top: {{ section.settings.pt_xs }}px; padding-bottom: {{ section.settings.pb_xs }}px; }
  }
{%- endstyle -%}
<script>
window.addEventListener("scroll", function () {
  
  const video = document.querySelector(".trans-video");
  const wrapper = document.querySelector(".trans-video .full-video-highlight-img-section-wrapper");
  if (!video || !wrapper) return;

  const sectionTop = video.offsetTop;
  const triggerPoint = sectionTop - 500;

  if (window.scrollY > triggerPoint) {
    video.style.maxWidth = "100%";
    video.style.setProperty("padding", "0", "important");
    wrapper.style.maxWidth = "100%";
    wrapper.style.borderRadius = "0";
    wrapper.style.setProperty("padding", "0", "important");
  } else {
      video.style.maxWidth = "168rem";
    video.style.removeProperty("padding"); 
    wrapper.style.maxWidth = "168rem";
    wrapper.style.borderRadius = "";
    wrapper.style.removeProperty("padding");
  }
});


</script>
